<!DOCTYPE html>
<html>
  <head>
    <title>UCL</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container mt-5">
      <h1 class="text-center">Welcome to UCL</h1>

      <% if user_signed_in? %>
        <% if current_user.email == "guest@example.com" %>
          <div class="alert alert-info text-center">
            <p>Welcome, Guest User!</p>
            <%= link_to 'Test it out', ucl_test_path, method: :get, class: 'btn btn-primary' %>
            <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
          </div>
        <% else %>
          <div class="alert alert-success text-center">
            <p>Welcome, <%= current_user.email %>!</p>
            <%= link_to 'Test it out', ucl_test_path, method: :get, class: 'btn btn-primary' %>
            <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
          </div>
        <% end %>
      <% else %>
        <div class="text-center">
          <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary mx-2' %>
          <%= link_to 'Log in', new_user_session_path, class: 'btn btn-secondary mx-2' %>
          <%= link_to 'Log in as Guest', guest_login_path, class: 'btn btn-warning mx-2' %>
        </div>
      <% end %>
    </div>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
