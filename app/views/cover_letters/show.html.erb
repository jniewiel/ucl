<!-- app/views/cover_letters/show.html.erb -->

<div class="container mx-auto pt-16">
  <div class="flex justify-center">
    <div class="w-full max-w-md">
      <h1 class="text-center mb-4 text-2xl font-bold">Cover Letter Details</h1>

      <div class="bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-center mb-3 text-xl font-semibold">Generated Cover Letter</h2>

        <div class="border p-3 mb-3">
          <%= render @cover_letter %>
        </div>

        <div class="flex justify-center mb-3 space-x-3">
          <%= link_to "Edit this cover letter", edit_cover_letter_path(@cover_letter), class: 'bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded' %>

          <%= link_to "Back to cover letters", cover_letters_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>

          <%= button_to "Destroy this cover letter", @cover_letter, method: :delete, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded' %>
        </div>
      </div>
    </div>
  </div>
</div>
